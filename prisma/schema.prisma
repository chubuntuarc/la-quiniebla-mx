// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  name         String?
  email        String   @unique
  password     String?
  image        String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  bets         Bet[]
  balance      Float    @default(100)
}

model Bet {
  id          String    @id @default(cuid())
  amount      Float
  odds        Float
  potentialWin Float
  status      BetStatus @default(PENDING)
  matchId     String
  prediction  String
  actualResult String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  userId      String
  user        User      @relation(fields: [userId], references: [id])
}

enum BetStatus {
  PENDING
  WON
  LOST
}
